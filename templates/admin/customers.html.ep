<h2> Customers</h2>

<table id="customer_table"  data-toggle="table">
    <thead>
        <tr>
            <th data-sortable="false" data-field="id" data-checkbox="true">
            </th>
            <th data-field="firstname">First Name</th>
            <th data-field="lastname">Last Name</th>
            <th data-field="city">City</th>
            <th data-field="zipcode">Zip Code</th>
            <th data-filed="email">Email</th>
        </tr>
    </thead>
    <tbody>

    %while (my $awn = $awn->next) { 
    %next if $awn->user_level eq 'admin';
        <tr>
            <td>
                <input class="bs-checkbox" type="checkbox" value="<%= $awn->id %>">
            </td>
            <td>
                <%= $awn->firstname %>
            </td>
            <td>
                <%= $awn->lastname %>
            </td>
            <td>
                <%= $awn->city %>
            </td>
            <td>
                <%= $awn->zipcode %>
            </td> 
            <td>
                <%= $awn->email %>
            </td>
        </tr>
    %}
    </tbody>
</table>
<br/>
<div class="btn-toolbar">

    <button type="button" onclick="get_message_display();" style="display:none;margin-left:10px" id="message_button" class="btn btn-success btn-block btn-lg">Send a Message</button>
    <button type="button" style="display:none;" id="bill_button" class="btn btn-block btn-lg btn-primary">Bill  Selected Customers</button>
