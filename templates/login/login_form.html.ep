%if(flash('create_user_success') eq 'Success'){
%my $success = flash('create_user_success');
	<h3 style="color:green"><%= $success%></h3>
%}

%= form_for 'login' => (method => 'POST') => begin
	%= label_for username => 'Username'
	%= text_field 'username'

	%=tag 'br' 
	%=tag 'br'
	%= label_for password => 'Password'
	%= password_field 'password'

	%=tag 'br'
	%=tag 'br'
	%= submit_button 'Log me in', class => 'btn button-primary'
% end
