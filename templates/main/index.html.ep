<h2>This is the &mdash;  Index / home screen</h2>
<p>Welcome to Document Generator</p>
<h3>Post Index</h3>

% my $post = db->resultset('User');
% if ($post->count == 0){
	<p>None :</p>
%}

% while (my $post = $post->next){
	<div class="post">
		<h4>
			<%= $post->username %>
			</br>
			<!-- <small>(password: <%= $post->pw_hash%>)</small> -->
		</h4> 

	</div>
%}

